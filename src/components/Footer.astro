---
import { GITHUB_ORG } from "$lib/consts";

const today = new Date();
---

<footer class="pb-24 pt-16 px-8 flex justify-between gap-4 items-center">
  <div>
    <p class="text-muted-foreground">
      &copy; {today.getFullYear()} rickli-cloud. All rights reserved.
    </p>

    <div class="flex gap-3 items-center">
      <a href="/legal" class="hover:underline">Legal Disclosure</a>
      <a href="/contact" class="hover:underline">Contact us</a>
    </div>
  </div>

  <div
    class="flex justify-center gap-3 [&>a>svg]:h-6 [&>a>svg]:w-6 [&>a>svg]:text-foreground/60 hover:[&>a>svg]:text-foreground/80"
  >
    <a href="/rss.xml" rel="noreferrer" target="_blank" class="">
      <span class="sr-only">RSS feed</span>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        astro-icon="RSSicon"
        viewBox="0 0 8 8"
      >
        <title>RSS feed</title>
        <rect fill="currentColor" width="8" height="8" rx="1.5"></rect>
        <circle style="fill: hsl(var(--b2));" cx="2" cy="6" r="1"></circle>
        <path
          style="fill: hsl(var(--b2));"
          d="m 1,4 a 3,3 0 0 1 3,3 h 1 a 4,4 0 0 0 -4,-4 z"></path>
        <path
          style="fill: hsl(var(--b2));"
          d="m 1,2 a 5,5 0 0 1 5,5 h 1 a 6,6 0 0 0 -6,-6 z"></path>
      </svg>
    </a>

    <a href=`https://github.com/${GITHUB_ORG}` target="_blank">
      <span class="sr-only">GitHub</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        astro-icon="social/github"
      >
        <title>GitHub</title>
        <path
          fill="currentColor"
          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
        ></path>
      </svg>
    </a>
  </div>
</footer>
