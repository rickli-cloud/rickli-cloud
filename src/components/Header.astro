---
import { SITE_TITLE } from "$lib/consts";
---

<header
  class="border-border/40 bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <nav class="flex gap-5 items-center w-full justify-between h-12 px-5">
    <h2 class="whitespace-nowrap font-bold text-lg select-none">
      <a href="/">
        {SITE_TITLE}
      </a>
    </h2>

    <ul
      class="flex gap-2.5 [&>li]:text-foreground/60 hover:[&>li]:text-foreground/80"
    >
      <li class={/^\/?$/.test(Astro.url.pathname) ? "!text-foreground/80" : ""}>
        <a href="/">Home</a>
      </li>
      <li
        class={/^\/blog\/?/.test(Astro.url.pathname)
          ? "!text-foreground/80"
          : ""}
      >
        <a href="/blog">Blog</a>
      </li>
      <li
        class={/^\/about\/?/.test(Astro.url.pathname)
          ? "!text-foreground/80"
          : ""}
      >
        <a href="/about">About</a>
      </li>
    </ul>
  </nav>
</header>
